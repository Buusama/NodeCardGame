<!DOCTYPE html>
<html lang="sv">

    <head>
        <meta charset="UTF-8">
        <title>Lobby</title>
        <link rel="stylesheet" href="main.css">
    </head>

    <body class="box">
        <header class="header">
            <a class="back-button" href="/">
                <img class="back-image" src="cards/QS.svg" alt="Tillbaka till huvudmenyn"
                    title="Tillbaka till huvudmenyn">
            </a>
            <h1 class="main-title"><%= gameName %></h1>
        </header>
        <div class="content" id="content">
            <aside class="playlist-container">
                <ul class="playlist" id="playlist">
                    <li>
                        <input placeholder="Skriv namn" class="join-input" id="join-input" type="text" maxlength="20">
                    </li>
                    <li class="join-button" id="join-button">
                        Anslut
                    </li>
                </ul>
            </aside>
            <main class="lobby-main" id="background-wrapper">
                <span class="big-text"><span id="players">0</span>/<%=minPlayers%> spelare för att starta</span>
                <button class="start-button" id="start-button" available="false">
                    Start
                </button>
            </main>
        </div>
        <div class = "rules-wrapper">
            <aside class = "rules">
                <%
                    return {
                        "Vändåtta" : require('./T8rules.html.ejs')(),
                        "Caravan" : require('./CNrules.html.ejs')()
                    }[gameName];
                %>
            </aside>
            <button class = "rules-button" id = "rules">Regler</button>
        </div>
        <div class = "chat" id = "chat" style="display: none;">
            <div class = "chat-option"></div>
            <div class = "chat-option"></div>
            <div class = "chat-option"></div>
            <div class = "chat-option"></div>
            <div class = "chat-option"></div>
        </div>
        <script src="client.js"></script>
        <script type="module" id = "import">
            import { game as gameObj } from <%= `"./${jsFile}"` %>;
            game = gameObj;
            document.querySelector('#import').remove();
        </script>
    </body>

</html>